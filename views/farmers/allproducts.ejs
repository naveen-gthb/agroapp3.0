<% layout('layouts/boilerplate')%>

<a href="/farmer" class = "btn btn-success mr-3 mb-3 ">&#x2B9C; Back</a>

<div class="input-group  mb-3 border-success shadow mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text btn-primary" id="inputGroup-sizing-default">Search</span>
    </div>
    <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" id = "search" oninput="searchProduct();" placeholder="Search Seeds, Fertilizers and more..">
  </div>
  

<h1>Latest Products</h1>


    <div class="row  ">
        <% for (let product of products){%>
        <div class = "col-md-3 col-sm-6 productCard">
            <div class="card border-success shadow mb-3">
                <img class="card-img-top" src="<%=product.images[0].url%>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><%= product.name %> </h5>
                    <p class="card-text"><%= product.description.substr(0,100) %></p>
                    <div class = "d-flex flex-row">
                        <h3 class="card-text mr-3"><span>&#8377;</span><%= product.price %></h3>
                        <p class="starability-result" data-rating="<%= (product.ratingSum === 0)?(1):Math.floor(product.ratingSum/product.reviewCount) %>">
                            Rated: <%=  (product.ratingSum = 0)?(1):(product.ratingSum/product.reviewCount) %> stars
                        </p>
                    </div>
                    <a href="/farmer/products/<%=product._id%>" class="btn btn-success">Explore</a>

                </div>
            </div>
        </div>
        
        <% }%>
    </div>
  
