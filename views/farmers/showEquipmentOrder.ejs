<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css">

<a href="/farmer/orders" class = "btn btn-success mr-3 mb-3 ">&#x2B9C; Back</a>

<div class="row">
    <div class="col-md-6">
        <div id="campgroundCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% order.product.images.forEach((img, i) => {  %>
                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                    <img src="<%= img.url%>" class="d-block w-100" alt="">
                </div>
                <% }) %>

            </div>
            <% if(order.product.images.length > 1) {%>
            <a class="carousel-control-prev" href="#campgroundCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#campgroundCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <% } %>
        </div>

        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= order.product.name%></h5>
                <p class="card-text"><%= order.product.description%></p>
                <h3 class="card-text"><%= order.time %> hours</h3>
            </div>
            
          
        </div>

    </div>
    <div class="col-md-6">
        <div class="card mb-3 card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>Rented Quantity - </b><%= order.quantity%></li>
            <li class="list-group-item"><b>Rate/Hour - </b><span>&#8377;</span><%= order.product.price%>/hour</li>
            <li class="list-group-item"><b>Time (Approx) - </b><%= order.time%> hours</li>
            <li class="list-group-item"><b>Equipment Owner - </b><%= order.supplier.username%></li>
            <li class="list-group-item"><b>Equipment Owner Contact - </b><%= order.supplier.contact%></li>
            
            
            <li class="list-group-item"><b>Total Cost - </b><span>&#8377;</span><%= order.quantity * order.product.price * order.time%></li>

            <li class="list-group-item text-info"><h4>Farm Address</h4></li>

            <li class="list-group-item"><b>Customer Name - </b><%= order.farmer.username%></li>
            <li class="list-group-item"><b>Street - </b><%= order.street%></li>
            <li class="list-group-item"><b>Landmark - </b><%= order.landmark%></li>
            <li class="list-group-item"><b>City - </b><%= order.city%></li>
            
            <li class="list-group-item"><b>Contact - </b><%= order.contact%></li>

            <% if(order.status === "not accepted") { %>
                <li class="list-group-item text-info"><b>Your order is not yet accepted by the Equipment Owner</b></li>
            <% } else if(order.status === "accepted") { %>
                <li class="list-group-item text-success"><b>Your order has been accepted by the Equipment Owner</b></li>
            <% } else if(order.status === "cancelled by supplier") { %>
                <li class="list-group-item text-danger"><b>Your order has been declined.Please Contact the Equipment owner for further details</b></li>
            <% } %>

            
            
        </div>
            
        </ul>
        <div class="d-flex flex-row">
        <% if(order.status === "not accepted" || order.status === "accepted") { %>
            <form action="/farmer/orders/<%= order._id %>/cancel" method="POST" class="validated-form" novalidate>  
                <div class="mb-3">
                    <button class="btn btn-danger">Cancel Order</button>
                </div>
            </form>
              
        <% } %>

        
     </div>
          
    </div>
</div>