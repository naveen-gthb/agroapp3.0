<% layout('layouts/boilerplate')%>

<a href="/supplier" class = "btn btn-success mr-3 mb-3 ">&#x2B9C; Back</a>

<h1>Your Products</h1>
<div class = "mb-3">
    <a href="/supplier/products/new" class = "btn btn-success mr-3">Add Product</a>
    <a href="/supplier/orders" class = "btn btn-primary mr-3">Show Orders</a>
</div>

<div class="row  ">
    <% for (let product of products){%>
    <div class = "col-md-3 col-sm-6">
        <div class="card style="width: 18rem;"">
            <img class="card-img-top" src="<%=product.images[0].url%>" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><%= product.name %> </h5>
                <p class="card-text"><%= product.description.substr(0,100) %></p>
                <div class = "d-flex flex-row">
                    <h3 class="card-text mr-3"><span>&#8377;</span><%= product.price %></h3>
                    <p class="starability-result" data-rating="<%= (product.ratingSum === 0)?(1):Math.floor(product.ratingSum/product.reviewCount) %>">
                        Rated: <%=  (product.ratingSum = 0)?(1):(product.ratingSum/product.reviewCount) %> stars
                    </p>
                </div>
                <a href="/supplier/products/<%=product._id%>" class="btn btn-primary">Explore</a>
            </div>
        </div>
    </div>
    
    <% }%>
</div>
